<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/gridviewdata"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/transportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Тип (не заполнено)"
            android:textSize="16dp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/transportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Названине (не заполнено)"
            android:textSize="16dp"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/transportCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Вместимость (не заполнено)"
            android:textSize="16dp"
            android:textStyle="normal|italic" />

</LinearLayout>
